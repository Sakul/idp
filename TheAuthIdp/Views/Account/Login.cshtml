                <form action="complete" method="post">
                    <input id="baid" type="hidden" asp-for="BizAccountId" />
                    <input id="usernameid" type="hidden" asp-for="Username" />
                    <input type="hidden" asp-for="ReturnUrl" />
                    <button class="btn btn-success" type="submit" id="complete">Completed</button>
                </form>
                <form action="fail" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <button class="btn btn-danger" type="submit" id="fail">Fail</button>
                </form>
            </div>
        </div>
    </div>
</div>

